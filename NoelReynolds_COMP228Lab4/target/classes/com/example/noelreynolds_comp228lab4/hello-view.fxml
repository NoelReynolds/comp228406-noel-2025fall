<GridPane alignment="CENTER" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.noelreynolds_comp228lab4.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <columnConstraints>
        <ColumnConstraints percentWidth="25"/>
        <ColumnConstraints percentWidth="25"/>
        <ColumnConstraints percentWidth="25"/>
        <ColumnConstraints percentWidth="25"/>
    </columnConstraints>

    <rowConstraints>
        <RowConstraints percentHeight="10"/>
        <RowConstraints percentHeight="10"/>
        <RowConstraints percentHeight="10"/>
        <RowConstraints percentHeight="10"/>
        <RowConstraints percentHeight="10"/>
        <RowConstraints percentHeight="10"/>
        <RowConstraints percentHeight="10"/>
        <RowConstraints percentHeight="10"/>
        <RowConstraints percentHeight="20"/>
    </rowConstraints>

    <!--Text fields by rows-->
    <Label text="Full Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <Label text="Address:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="addressField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Label text="City:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <TextField fx:id="cityField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <Label text="Province:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
    <TextField fx:id="provinceField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

    <Label text="Postal Code:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
    <TextField fx:id="postalField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

    <Label text="Phone:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
    <TextField fx:id="phoneField" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

    <Label text="Email:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
    <TextField fx:id="emailField" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

    <!--Toggles-->
    <CheckBox text="Student Council" fx:id="councilToggle" GridPane.rowIndex="0" GridPane.rowSpan="3" GridPane.columnIndex="2"/>
    <CheckBox text="Volunteer" fx:id="volunteerToggle" GridPane.rowIndex="3" GridPane.rowSpan="4" GridPane.columnIndex="2"/>

