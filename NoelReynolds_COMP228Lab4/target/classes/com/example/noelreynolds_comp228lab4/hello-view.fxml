    <!--Button-->
    <Button text="Display" fx:id="displayButton" GridPane.rowIndex="7" GridPane.columnIndex="0" GridPane.columnSpan="4"
            GridPane.halignment="CENTER" onAction="#displayButtonClicked"/>

    <!--Display information-->
    <TextArea fx:id="displayText" GridPane.columnIndex="0" GridPane.columnSpan="4" GridPane.rowIndex="8"/>
</GridPane>
